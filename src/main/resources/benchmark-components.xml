<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="benchmark-properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>file:benchmark-runner.properties</value>
			</list>
		</property>
    </bean>
    
    <bean id="shp-ds" class="com.boundless.benchmark.ShapefileBasedDataStoreCreator">
    	<property name="properties" ref="benchmark-properties" />
    </bean>
    <bean id="del-ws" class="com.boundless.benchmark.GeoserverCleaner">
    	<property name="properties" ref="benchmark-properties" />
    </bean>
    
    <bean id="benchmark-components" class="java.util.ArrayList">
    	<constructor-arg>
    		<list>
    			<ref bean="shp-ds" />
    			<ref bean="del-ws" />
    		</list>
    	</constructor-arg>
    </bean>
</beans>
